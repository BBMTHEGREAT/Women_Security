<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.hp.women_security">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="Rakskaq"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login" />
        <activity android:name=".emergency" />
        <activity
            android:name=".forgot"
            android:label="@string/title_activity_forgot"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".features"
            android:label="@string/title_activity_features"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".shortcut"
            android:label="@string/title_activity_shortcut"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".entry_page"
            android:label="@string/title_activity_entry_page"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".signup"
            android:label="@string/title_activity_signup"
            android:theme="@style/AppTheme"></activity>
    </application>

</manifest>
